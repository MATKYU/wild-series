{% extends 'base.html.twig' %}

{% block title %} CategoryController {% endblock %}

{% block body %}
	<h1> La listes des categories </h1>
	<div>
	<a href="{{ path('category_new') }}"> Ajouter une catégorie </a>
	{% for category in categories %}
		<div>
			<a href="{{ path('category_show', {'categoryName': category.name}) }}"> {{ category.name }} </a>
		</div>
    {% else %}
        No Web Series found !
	{% endfor %}
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
