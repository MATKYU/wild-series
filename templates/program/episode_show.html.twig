{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<main>
		<h1>{{ program.title }} S{{ season.number }} E{{ episode.number }} </h1>
		<div>
			<div>
				<h2>{{ episode.title }}</h2>
				<p>Synopsis : {{ episode.synopsis }}</p>
			</div>
			<a href="{{ path('program_season_show', {'programId': program.id, 'seasonId': season.id}) }}">Retour à la liste des épisodes</a>
		</div>
	</main>
{% endblock %}